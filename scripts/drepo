CMD=$1
shift

if [ -z "$LESS" ]; then
	LESS="FRSX"
	export LESS
fi

if [ -z "$PAGER" ]; then
	PAGER=$(set -- $(which pager less more); echo $1)
fi

case "$CMD" in
	diff)
		( git diff $@; git submodule --quiet foreach "git diff $@ || true" ) | $PAGER
		;;
	find)
		( find bitbake meta-* openembedded-core $@ ) | $PAGER
		;;
	grep)
		( find conf/ -name "*.conf" | xargs grep -H $@; git grep $@; for d in */.git */*/.git; do d=`dirname $d`; [ -d "$d" ] && cd $d && git grep $@ | sed -e "s,^,$d/,"; cd $OLDPWD; done ) | $PAGER
		;;
	*)
		echo "Usage: source ${BASH_SOURCE[0]:-drepo} <diff|find|grep> [...]"
		;;
esac
